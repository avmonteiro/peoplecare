<% @patients.each do |patient| %>

<div class="grid-container">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= patient.name %></h3>
      </div>
      <div class="panel-body">
        <p><%= patient.address %></p>
        <p><%= patient.region.name %></p>
        <p><%= patient.email %></p>
        <p><%= mail_to patient.email, "Enviar Email", cc: current_professional.email, subject: "working" %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
