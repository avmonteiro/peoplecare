<h1>Contato</h1>

<%= flash[:notice] %>

<%= form_tag emails_path, method: :post do %>

  <%= label_tag :name,"Nome" %><br/>
  <%= text_field_tag :name %> <br/>
  <%= label_tag :speciality, "Especialidade" %><br/>
  <%= text_field_tag :speciality %> <br/>
  <%= label_tag :description, "Descrição" %> <br/>
  <%= text_area_tag :description %> <br/>

  <%= submit_tag "Enviar" %>

<% end %>
