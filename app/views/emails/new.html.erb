<%= notice %>

<h1>Contato</h1>

<%= form_for @email, html: { multipart: true } do |f| %>
  <dl>

    <dt><%= f.label :patient_id, "Paciente: #{@patient.name}" %></dt>

    <dt><%= f.label :description, "Descrição"%></dt>
    <dt><%= f.text_area :description %><dt>

    <br>

    <dt><%= f.submit 'Enviar' %></dt>

  </dl>

<% end %>
